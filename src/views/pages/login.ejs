<% layout('layouts/layout') %>

<h2 class="page-title">Anmelden</h2>
<form action="/login" method="post" class="card form" style="max-width:480px">
  <label class="field">
    <span>E-Mail</span>
    <input class="input" name="email" type="email" placeholder="dein.name@bunca.de" required />
  </label>
  <label class="field">
    <span>Passwort</span>
    <input class="input" name="password" type="password" placeholder="Passwort" required />
  </label>
  <button class="btn btn-primary">Login</button>
</form>
